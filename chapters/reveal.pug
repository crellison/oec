extends ./layout.pug

block extraHead
  link(rel="stylesheet", href="./static/styles/reveal.css")
  link(rel="stylesheet", href="./static/styles/simple.css")
  link(rel="stylesheet", href="./static/styles/zenburn.css")
  link(rel="stylesheet", href="./static/styles/style.css")
  link(rel="manifest" href="./static/manifest.json")
  script.
    var link = document.createElement( 'link' );
    link.rel = 'stylesheet';
    link.type = 'text/css';
    link.href = window.location.search.match( /print-pdf/gi ) ? 'css/print/pdf.css' : './static/styles/paper.css';
    document.getElementsByTagName( 'head' )[0].appendChild( link );

block content
  a#home(href="/")
    img.git(src="static/images/home.svg" alt="home")
  .reveal
    .slides
      section(data-markdown, data-separator="^---$",  data-separator-vertical="^\\^\\^\\^$")
        script(type="text/template")
          block slides
    script(src="./static/head.min.js")
    script(src="./static/reveal.js")
    script.
      // More info https://github.com/hakimel/reveal.js#configuration
      Reveal.initialize({
        history: true,

        // More info https://github.com/hakimel/reveal.js#dependencies
        dependencies: [
          { src: './static/plugin/marked.js' },
          { src: './static/plugin/markdown.js' },
          { src: './static/plugin/notes.js', async: true },
          { src: './static/plugin/highlight.js', async: true, callback: function() { hljs.initHighlightingOnLoad(); } }
        ]
      });
    script(src="./static/jquery-3.1.1.min.js")